includeConfig 'quay.config'
includeConfig 'node.config'
workDir = params.workdir

params {
    databases = params.dbs
    cloudProcess = true
}

executor {
    name = "lsf"
    queueSize = 200
    queueGlobalStatus = true
    submitRateLimit = "10 sec"
    pollInterval = "10 sec"
}

process {
    queue = {
        task.memory >= 200.GB ? 'bigmem' : 'production'
    }
    cache = "lenient"

}

conda.enabled = false

singularity {
    enabled = true
    autoMounts = true
    cacheDir = params.singularity_cachedir
}